{
  "labels": ["Dependencies"],
  "rebaseWhen": "conflicted",
  "extends": [
    ":semanticCommits",
    "config:best-practices"
  ],
  "includePaths": [
    "buildSrc/gradle/**",
    "gradle/**",
    ".github/**"
  ],
  "ignoreDeps": ["keiyoushi/issue-moderator-action"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "{{manager}} dependencies"
    },
    {
      "matchManagers": ["gradle"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle",
        "gradle"
      ],
      "draftPR": true,
      "enabled": true
    }
  ]
}
